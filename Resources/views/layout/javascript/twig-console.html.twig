{# Resources/views/layout/dump-context.html.twig #}
{% if ("dev" == app.environment) %}
    <!-- Bootstrap Twig console -->
    <script type="text/javascript">
        $(document).ready(function () {
            $("div#twig-console h3.panel-title span.glyphicon").on("click", function () {
                var dumpContext = $("div#dump-context");
                var displayProperty = "none";
                if ("none" === dumpContext.css("display")) {
                    displayProperty = "block";
                }
                dumpContext.css("display", displayProperty);
            });
        });
    </script>
{% endif %}
