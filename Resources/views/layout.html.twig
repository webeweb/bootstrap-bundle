{# Resources/views/layout.html.twig #}
{% block bootstrapFormTheme %}
    {% if (form is defined) %}
        {% form_theme form "bootstrap_3_layout.html.twig" %}
    {% endif %}
{% endblock %}
<!DOCTYPE html>
<html>
    <head>
        {% block bootstrapFavicons %}
            <!-- Favicons -->
            <link rel="apple-touch-icon" href="{{ asset("bundles/bootstrap/favicons/apple-icon-57x57.png") }}" sizes="57x57">
            <link rel="apple-touch-icon" href="{{ asset("bundles/bootstrap/favicons/apple-icon-60x60.png") }}" sizes="60x60">
            <link rel="apple-touch-icon" href="{{ asset("bundles/bootstrap/favicons/apple-icon-72x72.png") }}" sizes="72x72">
            <link rel="apple-touch-icon" href="{{ asset("bundles/bootstrap/favicons/apple-icon-76x76.png") }}" sizes="76x76">
            <link rel="apple-touch-icon" href="{{ asset("bundles/bootstrap/favicons/apple-icon-114x114.png") }}" sizes="114x114">
            <link rel="apple-touch-icon" href="{{ asset("bundles/bootstrap/favicons/apple-icon-120x120.png") }}" sizes="120x120">
            <link rel="apple-touch-icon" href="{{ asset("bundles/bootstrap/favicons/apple-icon-144x144.png") }}" sizes="144x144">
            <link rel="apple-touch-icon" href="{{ asset("bundles/bootstrap/favicons/apple-icon-152x152.png") }}" sizes="152x152">
            <link rel="apple-touch-icon" href="{{ asset("bundles/bootstrap/favicons/apple-icon-180x180.png") }}" sizes="180x180">
            <link rel="icon" type="image/png" href="{{ asset("bundles/bootstrap/favicons/android-icon-192x192.png") }}" sizes="192x192">
            <link rel="icon" type="image/png" href="{{ asset("bundles/bootstrap/favicons/favicon-32x32.png") }}" sizes="32x32">
            <link rel="icon" type="image/png" href="{{ asset("bundles/bootstrap/favicons/favicon-96x96.png") }}" sizes="96x96">
            <link rel="icon" type="image/png" href="{{ asset("bundles/bootstrap/favicons/favicon-16x16.png") }}" sizes="16x16">
            <link rel="manifest" href="{{ asset("bundles/bootstrap/favicons/manifest.json") }}">
            <meta name="msapplication-TileColor" content="#ffffff">
            <meta name="msapplication-TileImage" content="{{ asset("bundles/bootstrap/favicons/ms-icon-144x144.png") }}">
            <meta name="theme-color" content="#ffffff">
        {% endblock %}
        <meta http-equiv="Content-Type" content="text/html; charset=utf8">
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
        {% block bootstrapStylesheets %}
            {% include "@Bootstrap/layout/stylesheets.html.twig" %}
        {% endblock %}
        <title>{% block bootstrapTitle %}{% endblock %}</title>
    </head>
    <body{% block bootstrapBody %}{% endblock %}>
        {% block bootstrapContent %}
        {% endblock %}
        {% block bootstrapJavascripts %}
            {% include "@Bootstrap/layout/javascripts.html.twig" %}
        {% endblock %}
    </body>
</html>
