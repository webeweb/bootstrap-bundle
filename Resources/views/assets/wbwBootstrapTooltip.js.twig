/**
 * Bootstrap tooltip.
 */
class WBWBootstrapTooltip {

    /**
     * Refresh a tooltip.
     *
     * @param {jQuery} $el The element.
     * @return {undefined}
     */
    static refresh($el) {
        $el.tooltip("destroy");
        $el.tooltip();
    }

    /**
     * Displays a tooltip.
     *
     * @param {jQuery} $el The element.
     * @return {undefined}
     */
    static tooltip($el) {
        $el.tooltip();
    }

    /**
     * Displays the tooltips inside an element.
     *
     * @param {jQuery} $el The element.
     * @return {undefined}
     */
    static tooltips($el) {
        WBWBootstrapTooltip.tooltip($el.find('[data-toggle="tooltip"]'));
    }
}
